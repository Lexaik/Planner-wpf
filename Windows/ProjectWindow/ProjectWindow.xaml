<Window x:Class="TOP_Planner.Windows.ProjectWindow.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"

        Title="ProjectWindow" Height="600" Width="800"
       MinWidth="1080" MaxWidth="1920"
        
       WindowStartupLocation="CenterScreen"
       WindowState="Normal" WindowStyle="SingleBorderWindow" ResizeMode="CanResize">
       
       <Window.Resources>
              <ResourceDictionary Source="ProjectWindowStyles.xamlWindowStyles.xaml"/>
       </Window.Resources>
       
       <StackPanel Orientation="Vertical">
        <Grid>
               <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Button x:Name="Project"
                Content="Заказы"
                Grid.Column="0"
                Grid.Row="0"/>
        <Button x:Name="Supplies"
                Content="Оборудование"
                Grid.Column="1"
                Grid.Row="0"/>
        <Button x:Name="Employee"
                Content="Сотрудники"
                Grid.Column="2"
                Grid.Row="0"/>
        <Button x:Name="Materials"
                Content="Материалы"
                Grid.Column="3"
                Grid.Row="0"/>
        <Button x:Name="AllProject"
                Content="Список заказов"
                Grid.Column="0"
                Grid.Row="1"/>
        <Button x:Name="Add"
                Content="Добавить"
                Grid.Column="1"
                Grid.Row="1"/>
        <Button x:Name="Edit"
                Content="Редактировать"
                Grid.Column="2"
                Grid.Row="1"/>
        <Button x:Name="Delete"
                Content="Удалить"
                Grid.Column="3"
                Grid.Row="1"/>
        
        </Grid>
        <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        
                </Grid.RowDefinitions>
                <TextBlock x:Name="Proj"
                       Text="№ Заказа/день"/>
                <TextBlock x:Name="Day1"
                       Text="1"
                       Grid.Column="1"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day2"
                       Text="2"
                       Grid.Column="2"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day3"
                       Text="3"
                       Grid.Column="3"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day4"
                       Text="4"
                       Grid.Column="4"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day5"
                       Text="5"
                       Grid.Column="5"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day6"
                       Text="6"
                       Grid.Column="6"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day7"
                       Text="7"
                       Grid.Column="7"
                       Grid.Row="0"/>
                <TextBlock x:Name="Today"
                       Text="Now"
                       Grid.Column="8"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day9"
                       Text="9"
                       Grid.Column="9"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day10"
                       Text="10"
                       Grid.Column="10"
                       Grid.Row="0"/>
                <TextBlock x:Name="Day11"
                       Text="11"
                       Grid.Column="11"
                       Grid.Row="0"/>
