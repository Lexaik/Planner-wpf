                Content="Редактировать"
                Grid.Column="1"
                Grid.Row="1"/>
        <Button x:Name="Delete"
                Content="Удалить"
                Grid.Column="2"
                Grid.Row="1"/>
        <DatePicker
                IsTodayHighlighted="True"
                x:Name="Calendar1"
                
                Grid.Column="3"
                Grid.Row="1"/>
        </Grid>
